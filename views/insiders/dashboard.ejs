<%- include("header") %>

<div
  class="vh-100 vw-100 d-flex flex-column align-items-center justify-content-center"
>
  <form action="" method="POST">
    <div class="form-group">
      <label for="url">URL:</label>
      <input id="url" name="url" type="text" class="form-control" required />
    </div>
    <div class="form-group">
      <label for="slug">Slug:</label>
      <input id="slug" name="slug" type="text" class="form-control" required />
    </div>
    <button type="submit" class="btn btn-success">Shorten!</button>
    <a class="btn btn-primary" href="/insiders/stats">Stats</a>
  </form>
  <% if(error_msg != "") { %>
  <div class="alert alert-danger alert-dismissible fade show mt-3" role="alert">
    <strong>Oops!</strong> <%= error_msg %>
    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
      <span aria-hidden="true">&times;</span>
    </button>
  </div>
  <% } %> <% if(success_msg != "") { %>
  <div
    class="alert alert-success alert-dismissible fade show mt-3"
    role="alert"
  >
    <strong>Hurray!</strong>
    <a href="https://<%= success_msg %>"><%= success_msg %></a>
    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
      <span aria-hidden="true">&times;</span>
    </button>
  </div>
  <% } %>
</div>

<%- include("footer") %>
